{
  "manifest_version": 3,
  "name": "GitHub PR Slop Hider",
  "version": "1.0.0",
  "description": "Automatically hides bot comments on GitHub PRs and issues to reduce AI slop noise",
  "permissions": [],
  "host_permissions": ["https://github.com/*"],
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
